<% layout ("/layouts/boilerplate") %>

<section class="container my-5">
  <h2 class="text-center mb-4">Projects</h2>
  <div class="row gy-4">

    <% const projects = [
      {
        id: 1,
        title: "WonderLust",
        img: "photo-1603270504031-4344a08b28b6.jpg",
        desc: "Wonderlust — Full-featured travel web app built with Node.js, Express and EJS (server-rendered UI)",
        demo: "https://github.com/surajks25/wanderlust",
        github: "https://github.com/surajks25/wanderlust"
      },
       {
        id: 2,
        title: "Weather APIs",
        img: "istockphoto-1737084975-1024x1024.jpg",
        desc: "Built a dynamic Weather App in React that fetches real-time data from APIs to display temperature, humidity, and conditions with a clean UI. 🌦️",
        demo: "https://react-major-project-omega.vercel.app/",
        github: "https://github.com/surajks25/react-major-project"
      },
       {
        id: 3,
        title: "wonderLust",
        img: "project1.jpg",
        desc: "Responsive personal portfolio built using HTML, CSS, JS, and Bootstrap.",
        demo: "https://your-portfolio-link.com",
        github: "https://github.com/yourusername/portfolio"
      },
      
    ]; %>

    <% projects.forEach(project => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <img src="/images/<%= project.img %>" class="card-img-top" alt="<%= project.title %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text"><%= project.desc %></p>
            <div class="mt-auto">
              <% if (project.demo) { %>
                <a href="<%= project.demo %>" target="_blank" class="btn btn-primary btn-sm me-2">Live Demo</a>
              <% } %>
              <% if (project.github) { %>
                <a href="<%= project.github %>" target="_blank" class="btn btn-outline-dark btn-sm">GitHub</a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }); %>

  </div>
</section>
