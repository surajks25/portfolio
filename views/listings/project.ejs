<% layout ("/layouts/boilerplate") %>

<section class="container my-5">
  <h2 class="text-center mb-4">Projects</h2>
  <div class="row gy-4">

    <% const projects = [
      {
        id: 1,
        title: "Portfolio Website",
        img: "project1.jpg",
        desc: "Responsive personal portfolio built using HTML, CSS, JS, and Bootstrap.",
        demo: "https://your-portfolio-link.com",
        github: "https://github.com/yourusername/portfolio"
      },
      {
        id: 2,
        title: "ToDo List App",
        img: "project2.jpg",
        desc: "Full-stack ToDo list with Node.js, Express, and MongoDB.",
        demo: "https://your-todo-demo.netlify.app",
        github: "https://github.com/yourusername/todo-app"
      },
      {
        id: 3,
        title: "Weather App",
        img: "project3.jpg",
        desc: "Fetches real-time weather data using OpenWeatherMap API.",
        demo: "#",
        github: "https://github.com/yourusername/weather-app"
      }
    ]; %>

    <% projects.forEach(project => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <img src="/images/<%= project.img %>" class="card-img-top" alt="<%= project.title %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text"><%= project.desc %></p>
            <div class="mt-auto">
              <% if (project.demo) { %>
                <a href="<%= project.demo %>" target="_blank" class="btn btn-primary btn-sm me-2">Live Demo</a>
              <% } %>
              <% if (project.github) { %>
                <a href="<%= project.github %>" target="_blank" class="btn btn-outline-dark btn-sm">GitHub</a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }); %>

  </div>
</section>
